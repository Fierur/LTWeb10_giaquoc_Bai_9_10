@{
    ViewBag.Title = "TaoDonDatHang";
    var gh = ViewBag.GioHang as Session.Models.GioHang;
    var kh = ViewBag.KhachHang as Session.Models.tblKhachHang;
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Thong tin dat hang</h2>

    <div style="text-align:center">
        <form action="@Url.Action("TaoDonDatHang", "DatHang")" method="post">
            @Html.AntiForgeryToken()

            <h3>Thông tin khách hàng</h3>
            <table class="table table-bordered" style="max-width: 600px; margin: 0 auto;">
                <tr>
                    <td><strong>Ho ten:</strong></td>
                    <td>@kh.TenKH</td>
                </tr>
                <tr>
                    <td><strong>Dia chi:</strong></td>
                    <td>@kh.DiaChi</td>
                </tr>
                <tr>
                    <td><strong>Dien thoai:</strong></td>
                    <td>@kh.SoDienThoai</td>
                </tr>
                <tr>
                    <td><strong>Ngay dat:</strong></td>
                    <td>@DateTime.Now.ToString("dd/MM/yyyy")</td>
                </tr>
                <tr>
                    <td><strong>Ngay giao:</strong></td>
                    <td>
                        <input type="date" name="txtDate" class="form-control" min="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                    </td>
                </tr>
            </table>

            <h3 class="mt-4">Chi tiet don hang</h3>
            <table class="table table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Ma sach</th>
                        <th>Ten sach</th>
                        <th>So luong</th>
                        <th>Don gia</th>
                        <th>Thanh tien</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in gh.lst)
                    {
                        <tr>
                            <td>@item.iMaSach</td>
                            <td>@item.sTenSach</td>
                            <td>@item.iSoLuong</td>
                            <td>@string.Format("{0:N0}", item.dDonGia) VNĐ</td>
                            <td>@string.Format("{0:N0}", item.ThanhTien) VNĐ</td>
                        </tr>
                    }
                </tbody>
                <tfoot class="table-info">
                    <tr>
                        <td colspan="2"><strong>Tong so luong: @gh.TongSLHang()</strong></td>
                        <td colspan="3"><strong>Tong tien: @string.Format("{0:N0}", gh.TongThanhTien()) VNĐ</strong></td>
                    </tr>
                </tfoot>
            </table>

            <div class="mt-3">
                <button type="submit" class="btn btn-success btn-lg" onclick="return confirm('Đơn hàng của quý khách đã được chúng tôi ghi nhận. Chúng tôi sẽ liên hệ quý khách trong thời gian sớm nhất và giao hàng đúng hẹn.')">
                    <i class="fas fa-check"></i> Dong y dat hang
                </button>
                <a href="@Url.Action("XemGioHang", "DatHang")" class="btn btn-secondary btn-lg">
                    <i class="fas fa-arrow-left"></i> Quay lai
                </a>
            </div>
        </form>
    </div>
</div>